{% extends 'base.html.twig' %}

{% block body %}
    <h1>Adresse</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adresse.id }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ adresse.rue }}</td>
            </tr>
