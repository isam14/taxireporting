{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chauffeurs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td><a href="{{ path('admin_chauffeur_show', { 'id': chauffeur.id }) }}">{{ chauffeur.id }}</a></td>
                <td>{{ chauffeur.nom }}</td>
                <td>{{ chauffeur.prenom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_chauffeur_show', { 'id': chauffeur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_chauffeur_edit', { 'id': chauffeur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_chauffeur_new') }}">Create a new chauffeur</a>
        </li>
    </ul>
{% endblock %}
